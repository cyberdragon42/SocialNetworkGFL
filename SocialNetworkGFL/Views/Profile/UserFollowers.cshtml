@model IEnumerable<BusinessLogic.Dto.ProfileModel>

@{
    ViewData["Title"] = "UserFollowers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<h2>@Localizer["Followers"]: @Model.Count()</h2>
@if (Model.Count() == 0)
{
    @Localizer["NoFollowersMessage"]
}
else
{
    <div>
        @foreach (var item in Model)
        {
        <div>
            @await Html.PartialAsync("_Profile", item)
        </div>
        }
    </div>
}





