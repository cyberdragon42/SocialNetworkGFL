@model BusinessLogic.Dto.SearchModel

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var returnUrl = Context.Request.Path + "?keyword=" + Model.Keyword;
}
<form asp-controller="Home" asp-action="search">
    <input type="text" name="keyword" id="keyword" value="@Model.Keyword"/>
    <input type="button" value="Search" class="btn btn-primary" onclick="onSearch()" />
</form>

@if (Model.Users == null)
{
}
else
{
    @foreach (var item in Model.Users)
    {
        <div>
            @await Html.PartialAsync("_Avatar", item.AvatarId + item.AvatarExtension)
            <h3>
                @item.Name
                @if (item.IsFollower)
                {
                    <span class="badge badge-primary">
                        follows you
                    </span>
                }
            </h3>
            <a asp-controller="Profile"
               asp-action="Index" asp-route-id="@item.Id">@item.UserName</a>
            @if (!item.IsFollowed)
            {
                <button class="btn btn-primary" id="followBtn" data-userId="@item.Id">
                    <a asp-controller="Profile" class="textLink"
                       asp-route-returnUrl=@returnUrl
                       asp-action="Follow" asp-route-id=@item.Id>follow</a>
                </button>
            }
            else
            {
                <button class="btn btn-light border" id="unfollowBtn" data-userId="@item.Id">
                    <a asp-controller="Profile" class="textLink"
                       asp-route-returnUrl=@returnUrl
                       asp-action="Unfollow" asp-route-id=@item.Id>unfollow</a>
                </button>
            }
            <hr />
        </div>
    }
}

<script type="text/javascript">
    function onSearch() {
        let keyword = document.getElementById("keyword").value;
        var url = '@Url.Action("Search", "Home")?keyword=' + keyword;
        window.location.href = url;
        //alert(url);
    }
</script>


