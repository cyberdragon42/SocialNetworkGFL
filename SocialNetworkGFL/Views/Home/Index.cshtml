@{
    ViewData["Title"] = "Home Page";
}

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model IEnumerable<Domain.Models.Post>

<div class="row">
    <form asp-action="Index">
        <fieldset>
            <legend>@Localizer["AddPost"]</legend>
            <div class="form-group">
                <input type="text" name="content" class="form-control" value="" />
            </div>
            <div>
                <label>&nbsp;</label>
                <input type="submit" value=@Localizer["AddPostButton"] class="submit btn btn-primary" />
            </div>
        </fieldset>
    </form>
</div>
<hr />
<div>
    @foreach (var item in Model)
    {
        @await Html.PartialAsync("../Shared/_Post.cshtml", item)
    }
</div>
