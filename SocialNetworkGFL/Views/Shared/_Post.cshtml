@model BusinessLogic.Dto.PostModel
@using Microsoft.AspNetCore.Mvc.Localization
@{ 
    var avatar = Model.User.AvatarId + Model.User.AvatarExtension;
    var requestUrl = Context.Request.Path;
}

@inject IViewLocalizer Localizer

<div>
    <div class="postContainer">
        @*<img src="~/images/istockphoto-1300845620-612x612.jpg" />*@
        @await Html.PartialAsync("_Avatar", avatar)
        <div>
            <h3>@Model.User.Name</h3>
            <a asp-controller="Profile"
               asp-action="Index" asp-route-id="@Model.User.Id">@Model.User.UserName</a>
                <a asp-controller="Profile"
                   asp-action="Post" asp-route-id="@Model.Id"
                   class="textLink">
                    <div>
                        @Model.Content
                    </div>
                </a>
            <div class="postStats">
                <span>
                    @if (Model.isLiked)
                    {
                            <a asp-action="DislikePost" class="textLink"
                               asp-controller="Post"
                               asp-route-returnUrl="@requestUrl"
                               asp-route-postId="@Model.Id">
                                @*<img src="~/images/dislikeIcon.png" 
                                     class="likeIcon"/>*@
                                <span>
                                    <i class="fa fa-heart fa-2x"></i>
                                </span>
                            </a>
                    }
                    else
                    {
                            <a asp-action="LikePost" class="textLink"
                               asp-controller="Post"
                               asp-route-returnUrl="@requestUrl"
                               asp-route-postId="@Model.Id">
                                @*<img src="~/images/likeIcon.png" class="likeIcon"/>*@
                                <span>
                                    <i class="fa fa-heart fa-2x" style="color:dimgrey"></i>
                                </span>
                            </a>
                    }

                    @if (@Model.Likes == null)
                    {
                        <span>0</span>
                    }
                    else
                    {
                        @Model.Likes.Count
                    }

                </span>
                <span>
                    @*@Localizer["Comments"]:*@
                    <span>
                        <i class="fa fa-comment fa-2x"></i>
                    </span>
                    @if (@Model.Comments == null)
                    {
                        <span>0</span>
                    }
                    else
                    {
                        @Model.Comments.Count
                    }
                </span>
                <p><i>@Model.Date</i></p>
                <hr />
            </div>
        </div>
    </div>
</div>
